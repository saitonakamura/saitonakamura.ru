{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["components/**/*", "pages/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
